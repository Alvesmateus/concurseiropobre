  /* Estilo para imagens Markdown */
  .markdown-image {
    max-width: 100%;
    height: auto;
    border-radius: 8px;
    margin: 10px 0;
    display: block;
  }

  /* Estilo para links Markdown */
  .simu-q a {
    color: #2563eb;
    text-decoration: none;
    border-bottom: 1px solid #93c5fd;
    transition: color 0.2s;
  }

  .simu-q a:hover {
    color: #1d4ed8;
    border-bottom-color: #2563eb;
  }

  /* Estilo para listas Markdown */
  .simu-q ul {
    margin: 10px 0 10px 20px;
    padding: 0;
  }

  .simu-q li {
    margin-bottom: 5px;
    line-height: 1.5;
  }

/* Estilo para quando clicar na alternativa (antes de responder) */
.simu-opt.selected {
    background-color: #e0e0e0;
    border: 2px solid #2196F3;
}

/* Estilo do botão responder */
.btn-responder {
    margin-top: 15px;
    padding: 10px 20px;
    background-color: #2196F3;
    color: white;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-weight: bold;
}

.btn-responder:hover {
    background-color: #1976D2;
}

   .metadata-tags {
        margin: 10px 0 15px 0;
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        align-items: center;
    }
    .metadata-item {
        display: flex;
        align-items: center;
        gap: 4px;
        background: #f8fafc;
        padding: 4px 8px 4px 4px;
        border-radius: 20px;
        border: 1px solid #e2e8f0;
    }
    .metadata-label-text {
        font-size: 11px;
        font-weight: 600;
        color: black;
        margin-right: 4px;
        white-space: nowrap;
    }
    .metadata-btn {
        display: inline-block;
        padding: 2px 10px;
        background: #e2e8f0;
        color: black ;
        text-decoration: none;
        border-radius: 16px;
        font-size: 11px;
        font-weight: 500;
        transition: all 0.2s;
        border: 1px solid transparent;
        white-space: nowrap;
    }
    .metadata-btn:hover {
        background: #cbd5e1;
        transform: translateY(-1px);
        text-decoration: none;
        
    }

    
    /* Melhorar a exibição dos botões com labels */
    .metadata-item .metadata-label-text {
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.3px;
        font-size: 10px;
    }
    
    /* Efeito hover no item completo */
    .metadata-item:hover {
        border-color: #cbd5e1;
        background: #f1f5f9;
    }
    .metadata-item:hover .metadata-label-text {
        color: #334155;
    }
