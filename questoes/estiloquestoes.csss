.simu-wrap { 
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif; 
    max-width: 100vw; 
    margin: auto; 
    color: #334155; 
}

.simu-q { background: #fff; border-bottom: 2px solid #e2e8f0; border-radius: 12px; padding: 10px 0px; margin-bottom: 25px; }

.simu-txt { font-size: 16px !important; font-weight: ; margin: 0 0 20px 0 !important; line-height: 1.6 !important; padding: 0 !important; display: block !important; border: none !important; }

.simu-opt-list { list-style: none !important; padding: 0 !important; margin: 0 !important; }

.simu-opt-list li::before { content: none !important; }

.simu-opt-container { margin-bottom: 10px; list-style: none !important; }

.simu-opt { 
    display: block; 
    width: 100%; 
    text-align: left; 
    padding: 15px 5px; 
    border: 1px solid #e2e8f0; 
    border-radius: 8px; 
    cursor: pointer; 
    background: #f1f5f9; 
    font-size: 16px; 
    transition: 0.2s; 
    font-family: inherit; 
    color: #000;
}

.simu-opt-obs { 
    display: none; 
    margin-top: 5px; 
    padding: 12px 10px; 
    background: #f8fafc; 
    border-radius: 8px; 
    font-size: 14px; 
    color: #475569; 
    border-left: 4px solid #cbd5e1; 
    font-family: inherit; 
}

.is-correct { background: #22c55e !important; border-color: #16a34a !important; color: #000 !important; font-weight: bold !important; }

.is-wrong { background: #ef4444 !important; border-color: #b91c1c !important; color: #fff !important; }

.other-wrong { background: #fee2e2 !important; border-color: #fecaca !important; color: #000 !important; opacity: 0.6; }

.correct-info { color: #000; font-weight: bold; margin-bottom: 5px; display: block; font-size: 11px; text-transform: uppercase; letter-spacing: 0.5px; }

